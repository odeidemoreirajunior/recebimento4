<mvc:View controllerName="linkup.recebimento4.controller.Main"
   	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
	xmlns:semantic="sap.f.semantic"
    xmlns:core="sap.ui.core"
    xmlns:m="sap.m"
    	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:sv="sap.ui.comp.smartvariants"
    >
   <semantic:SemanticPage
        id="listPage"
        preserveHeaderStateOnScroll="true"
		
		>
        <semantic:titleHeading>
            <Title
                id="listPageTitle"
                text="{i18n>titlePage}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <smartFilterBar:SmartFilterBar id="smartFilterBar" 
				entitySet="ZCDS_ZSTSD125" 
				initialized="onInitializedSmartFilterBar"
				persistencyKey="SmartFilter_Receb">
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
        </semantic:headerContent>

        <semantic:content>

			<smartTable:SmartTable id="smartTable"
									entitySet="ZCDS_ZSTSD125" 
									smartFilterId="smartFilterBar"
									tableType="Table" 
									header="{i18n>titleItem}" 
									placeToolbarInTable="true"
									persistencyKey="SmartFilter_Receb" 
									enableAutoBinding="true"
									showRowCount="true"
									beforeRebindTable="onDataReceived"
									
									>

				<smartTable:customToolbar>
                    <OverflowToolbar design="Transparent">
                       <ToolbarSpacer/>
                        	<Button text="Recebimento" type="Transparent" press="onRecebimento"/>
                       
                        </OverflowToolbar>
                </smartTable:customToolbar>


				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>	


			</smartTable:SmartTable>

        </semantic:content>
    </semantic:SemanticPage>


</mvc:View>
